<?xml version="1.0" encoding="utf-8"?>
<com.example.a29149.yuyuan.Widget.Mr_Zhang_ScrollViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/alpha_light_gray"
    android:id="@+id/z_fragment_container"
    custom:pageMaxChildView="4"
    tools:context="com.example.a29149.yuyuan.ModelStudent.Order.fragment.NoPayFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_light_gray"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@color/dark_green"
            android:gravity="center"
            android:text="未付款订单"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:textColor="#888888"
            android:gravity="center"
            android:text="我购买的课程"/>

        <com.example.a29149.yuyuan.ModelStudent.Order.view.MyListView
            android:id="@+id/lv_buyCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="付费完成后"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#888888"
            android:gravity="center"
            android:text="授课才开始哦"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textSize="13sp"
            android:textColor="#888888"
            android:gravity="center"
            android:background="@color/dark_green"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#888888"
            android:gravity="center"
            android:text="愚人精选"
            android:textSize="16sp"
            android:visibility="gone"
            />

        <com.example.a29149.yuyuan.ModelStudent.Order.view.MyListView
            android:id="@+id/lv_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/dark_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:clickable="true"
                android:text="取消订单"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textColor="@color/dark_green"
                android:clickable="true"
                android:text="合并订单"/>
        </LinearLayout>
    </LinearLayout>

</com.example.a29149.yuyuan.Widget.Mr_Zhang_ScrollViewPager>
