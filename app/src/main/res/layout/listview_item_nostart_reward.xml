<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="30dp">

    <ImageView
        android:id="@+id/iv_teacherPhone"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@null"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/tv_teacherNameAndCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朱洪军： javaEE"
            android:textColor="@color/grey555"
            />

        <TextView
            android:id="@+id/tv_rewardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬赏标题:"
            android:textColor="@color/grey555"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_rewardCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬赏价格： 1000RMB"
            android:textColor="@color/dark_green"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_corner_white"
        android:clickable="true"
        android:padding="5dp"
        android:text="取消订单"
        android:textColor="@color/dark_green"/>

    </RelativeLayout>

</LinearLayout>