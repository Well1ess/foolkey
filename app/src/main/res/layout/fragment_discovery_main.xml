<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/test_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <com.example.a29149.yuyuan.Widget.MyEditText
                android:transitionName="searchView"
                android:focusable="false"
                android:id="@+id/key_value"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_search"
                android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
                android:drawableRight="@mipmap/ic_clear"
                android:drawableTint="@color/white"
                android:ems="20"
                android:hint="请输入关键字"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_white"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/project_search_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_tongzhi"
                android:backgroundTint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RadioGroup
                    android:id="@+id/discovery_main_menu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:elevation="1dp">

                    <RadioButton
                        android:id="@+id/search_reward"
                        android:text="悬 赏"
                        style="@style/RadioButton.SearchMenu" />

                    <RadioButton
                        android:id="@+id/search_QA"
                        android:text="问 答"
                        style="@style/RadioButton.SearchMenu"  />

                    <RadioButton
                        android:id="@+id/search_article"
                        android:text="文 章"
                        style="@style/RadioButton.SearchMenu"  />
                </RadioGroup>

                <ImageView
                    android:id="@+id/id_tab_line"
                    android:layout_width="10dp"
                    android:layout_height="3dp"
                    android:background="@color/orange"
                    android:layout_gravity="bottom" />
            </FrameLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/content_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <android.support.v4.app.FragmentTabHost
                android:id="@android:id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0" />
            </android.support.v4.app.FragmentTabHost>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>