<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/test_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_return"
                android:rotation="180"
                android:backgroundTint="@color/colorPrimary" />

            <com.example.a29149.yuyuan.Widget.MyEditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_search"
                android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
                android:drawableRight="@mipmap/ic_clear"
                android:drawableTint="@color/white"
                android:ems="20"
                android:focusable="true"
                android:hint="请输入关键字"
                android:imeOptions="actionSearch"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_white"
                android:textSize="15sp"
                android:transitionName="searchView"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <RadioGroup
                        android:id="@+id/search_main_menu"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:elevation="1dp">

                        <RadioButton
                            android:id="@+id/search_course"
                            android:text="课 程"
                            style="@style/RadioButton.SearchMenu" />

                        <RadioButton
                            android:id="@+id/rb_search_reward"
                            android:text="悬 赏"
                            style="@style/RadioButton.SearchMenu" />

                        <RadioButton
                            android:id="@+id/search_teacher"
                            android:text="老 师"
                            style="@style/RadioButton.SearchMenu"  />


                        <RadioButton
                            android:id="@+id/search_QA"
                            android:text="问 答"
                            style="@style/RadioButton.SearchMenu"  />

                        <RadioButton
                            android:id="@+id/search_article"
                            android:text="文 章"
                            style="@style/RadioButton.SearchMenu"  />
                    </RadioGroup>

                    <ImageView
                        android:id="@+id/iv_tab_line"
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:background="@color/orange"
                        android:layout_gravity="bottom" />
                </FrameLayout>

                <RadioGroup
                    android:id="@+id/search_sub_menu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:elevation="1dp">

                    <RadioButton
                        android:checked="true"
                        android:id="@+id/search_target_multiple"
                        android:text="综合排序"
                        style="@style/RadioButton.SearchSubMenu" />

                    <RadioButton
                        android:id="@+id/search_target_price"
                        android:text="价格"
                        style="@style/RadioButton.SearchSubMenu" />

                    <RadioButton
                        android:id="@+id/search_target_distance"
                        android:text="距离"
                        style="@style/RadioButton.SearchSubMenu"  />

                    <RadioButton
                        android:id="@+id/search_target_course"
                        android:text="课程评分"
                        style="@style/RadioButton.SearchSubMenu"  />

                    <RadioButton
                        android:id="@+id/search_target_teacher"
                        android:text="老师评分"
                        style="@style/RadioButton.SearchSubMenu"  />
                </RadioGroup>

            </LinearLayout>


            <android.support.v4.view.ViewPager
                android:id="@+id/vp_content_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <android.support.v4.app.FragmentTabHost
                android:id="@android:id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0" />
            </android.support.v4.app.FragmentTabHost>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
