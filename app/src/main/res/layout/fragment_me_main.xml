                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/head_square"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"

                    >

                    <com.example.a29149.yuyuan.Widget.SquareImageView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/head"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@null"
                        android:elevation="2dp"


                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:id="@+id/slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/head_square"
                    android:layout_marginRight="20dp"
                    android:text="努力的时候，全世界都在帮你" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/slogan"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="————葛尧" />

                <TextView
                    android:id="@+id/prestige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/head_square"
                    android:layout_alignRight="@id/head_square"
                    android:paddingRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/modify_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/textview_edit_self_info"
                    android:drawableTop="@android:drawable/ic_menu_edit"
                    android:padding="3dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
