<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.a29149.yuyuan.Model.Me.MeMainFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:elevation="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="我"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/setting"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:text="设 置"
                android:gravity="center"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/head"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/grey"/>
                <TextView
                    android:id="@+id/info"
                    android:layout_alignTop="@id/head"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有的坚持，都源自于热爱"/>
                <TextView
                    android:layout_below="@id/info"
                    android:id="@+id/name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="————华哥" />
                <TextView
                    android:id="@+id/reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="声望"
                    android:textSize="12dp"
                    android:layout_alignBottom="@id/head"
                    android:layout_alignRight="@id/head"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="3dp"
                    android:textSize="12sp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:background="@drawable/textview_edit_self_info"
                    android:drawableTop="@android:drawable/ic_menu_edit"
                    android:text="编辑个人资料" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:text="我收藏的"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="@color/orange"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.MeMenu"
                        android:text="文章"/>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/TextView.MeMenu"
                        android:text="问答"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/TextView.MeMenu"
                        android:text="课程"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:text="我拥有的"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="@color/orange"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/owner_reward"
                        style="@style/TextView.MeMenu"
                        android:text="悬赏"/>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/TextView.MeMenu"
                        android:text="问答"/>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/TextView.MeMenu"
                        android:text="课程"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/TextView.MeMenuNumber"
                        android:text="2500"/>
                    <TextView
                        style="@style/TextView.MeMenuNumberUnit"
                        android:text="人民币"/>

                    <View
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  提 现  "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:background="@drawable/textview_normal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/virtual_money"
                        style="@style/TextView.MeMenuNumber"
                        android:text="2500"/>
                    <TextView
                        style="@style/TextView.MeMenuNumberUnit"
                        android:text="虚拟币"/>

                    <View
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/recharge"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  充 值  "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:background="@drawable/textview_normal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.MeMenuNumber"
                        android:text="1"/>
                    <TextView
                        style="@style/TextView.MeMenuNumberUnit"
                        android:text="优惠券"/>

                    <View
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/check_coupon"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  查 看  "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:padding="5dp"
                        android:background="@drawable/textview_normal"/>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/change_role"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/textview_normal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:text="  切 换 身 份  "/>

                <LinearLayout
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:layout_marginTop="40dp"
                    android:layout_below="@id/change_role"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/ic_dialog_info"
                            android:backgroundTint="@color/orange"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 切换为教师形态"
                            android:layout_gravity="center"
                            android:drawableTint="@color/orange"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可以直接"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:text="赚取现金"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="哦！"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
